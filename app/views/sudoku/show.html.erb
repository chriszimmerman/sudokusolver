<div class="mx-auto text-center items-center">
  <h1 class="text-4xl mb-4">Solution</h1>

  <table class="outline-3" style="margin-left: auto; margin-right: auto;">
    <tr>
      <% @solution.split("").map(&:to_i).each_with_index do |number, index| %>
        <td class="<%= solution_classes(index) %>"><%= number %></td>
        <% if (index + 1) % 9 == 0 %>
          </tr>
          <tr>
        <% end %>
      <% end %>
      </table>
</div>